---
import { Picture } from "astro:assets";
import GroupeGaillard from "@assets/clients/groupe-gaillard.png";
import EnergieMedical from "@assets/clients/energie-medical.png";
import Paramat from "@assets/clients/paramat.png";
import NewPlanetMedia from "@assets/clients/new-planet-media.png";
import Planet from "@assets/clients/planet.png";
import ESante from "@assets/clients/e-sante.png";
import Medisite from "@assets/clients/medisite.png";
---

<div>
  <h2
    class="text-xl lg:text-2xl xl:text-4xl font-bold text-center text-slate-500">
    Ils nous ont fait confiance et <span class="text-matouSecondary"
      >patounent avec nous</span
    >
