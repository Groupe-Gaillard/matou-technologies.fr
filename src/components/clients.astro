  <div
    class="flex gap-x-8 gap-y-4 md:gap-20 lg:gap-28 items-center justify-center mt-6 flex-wrap">
    <div class="text-gray-500 my-2 h-7 md:h-9">
      <a
        href="https://www.groupegaillard.fr/"
        class="grayscale hover:grayscale-0">
        <Picture
          src={GroupeGaillard}
          alt="Groupe Gaillard"
          formats={["avif", "webp"]}
          sizes="(max-width: 1024px) 100vw, 50vw"
          widths={[240, 540, 720, GroupeGaillard.width]}
          loading="eager"
          fetchpriority="high"
          class=""
        />
      </a>
    </div>

    <div class="text-gray-500 my-2 h-7 md:h-9">
