---
const { imageSrc, imageAlt, title, content } = Astro.props;
---

<section class="image-text-section">
  <div class="image-container">
    <img src={imageSrc} alt={imageAlt} />
  </div>
  <div class="text-content">
    <h2>{title}</h2>
    <p>{content}</p>
  </div>
</section>

<style>
  .image-text-section {
    display: flex;
    align-items: center;
    gap: 20px;
  }
  .image-text-section img {
    max-width: 50%;
    height: auto;
  }
  .image-text-section .text-content {
    max-width: 50%;
  }
</style>
