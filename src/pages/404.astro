---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
---

<Layout title="404 Not Found">
  <Container>
    <div class="min-h-[calc(100vh-20rem)] flex items-center justify-center">
      <div class="mt-16 text-center">
        <h1
          class="text-6xl lg:text-9xl font-bold lg:tracking-tight bg-gradient-to-b from-matouPrimary to-matouPrimaryLight02 bg-clip-text text-transparent">
          404
        </h1>
        <p class="text-lg lg:text-2xl font-medium mt-4 text-slate-700">
          La page que vous cherchez n'existe pas.
        </p>
        <div class="mt-10">
          <Link
            href="/"
            style="outline"
            className="rounded-full text-center transition focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-matouPrimaryDark01 focus-visible:outline-none focus-visible:shadow-outline-indigo px-7 py-2.5 bg-white border-2 border-matouPrimary hover:bg-indigo-50 text-matouPrimary ">
            Retourner sur la page d'accueil
          </Link>
        </div>
      </div>
    </div>
  </Container>
</Layout>
